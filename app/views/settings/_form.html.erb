<%= form_for @setting, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :access_key_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :access_key_id, :class => 'text_field', :placeholder => "XXXXXXXXXXXXXXXXXXXX" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :secret_access_key, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :secret_access_key, :class => 'text_field', :placeholder => "XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :s3_bucket_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :s3_bucket_name, :class => 'text_field', :placeholder => "unique_bucket_name_you_like" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                settings_path, :class => 'btn' %>
  </div>
<% end %>
